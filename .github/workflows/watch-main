name: Push to Main Test
on:
  pull_request:
    types:
      - opened
    branches:
      - 'main'
  push:
    branches:
    - 'main'
    - 'test-pipline-deployment'
permissions:
  contents: read

jobs:
  deploy:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: Set up Python
      uses: actions/setup-python@v3
      with:
        python-version: '3.x'
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install build
    - name: Pytest
      run: |
        pytest
